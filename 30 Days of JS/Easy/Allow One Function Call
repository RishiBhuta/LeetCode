/**
 * @param {Function} fn
 * @return {Function}
 */
var once = function(fn) {
    let called = false;
    let result;

    return function(...args) {
        if (!called) {
            called = true;
            result = fn(...args);
            return result;
        }
        return undefined;
    };
};

// Example Usage:
const add = (a, b, c) => a + b + c;
const onceAdd = once(add);
console.log(onceAdd(1, 2, 3)); // Output: 6
console.log(onceAdd(2, 3, 6)); // Output: undefined
