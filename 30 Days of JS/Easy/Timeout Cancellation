/**
 * @param {Function} fn
 * @param {Array} args
 * @param {number} t - delay in milliseconds
 * @return {Function} cancelFn
 */
var cancellable = function(fn, args, t) {
    const timeoutId = setTimeout(() => {
        fn(...args);
    }, t);

    // cancelFn cancels the scheduled execution
    return function cancelFn() {
        clearTimeout(timeoutId);
    };
};
