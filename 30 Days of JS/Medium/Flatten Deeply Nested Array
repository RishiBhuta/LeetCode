var flat = function(arr, n) {
    const result = [];

    const helper = (array, depth) => {
        for (const item of array) {
            if (Array.isArray(item) && depth < n) {
                helper(item, depth + 1); // Recurse into deeper level
            } else {
                result.push(item); // Push value as-is
            }
        }
    };

    helper(arr, 0); // Start at depth 0
    return result;
};
